#!/bin/bash -
coproc stdbuf -o L udevadm monitor -u -s block 
trap 'kill $COPROC_PID' EXIT

while read -r -u "${COPROC[0]}" do _ uevent devpath _; do
    if [[ $uevent == add ]]; then
        UUID=$(udevadm info "$devpath" | awk -F= '/ID_FS_UUID=/ {print $2}')

        if findmnt -n --fstab -S UUID="$UUID"; then
            mount -U "$UUID"
        fi
    fi
done
